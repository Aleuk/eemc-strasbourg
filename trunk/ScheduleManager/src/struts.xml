<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
  <constant name="struts.action.excludePattern" value="/_ah/.*,^/$"/>
  <constant name="struts.objectFactory" value="spring" />
  
  <package name="home" namespace="/" extends="struts-default">
	<result-types>  
	    <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />  
	</result-types>
        
	<action name="enter" class="fr.eemcs.schedulemanager.action.EnterAction">
		<result type="tiles" name="SUCCESS">home.def</result>
	</action>
	
	<action name="membres_*" method="{1}" class="fr.eemcs.schedulemanager.action.MembresAction">
		<result type="tiles" name="LIST">listeMembres.def</result>
		<result type="tiles" name="LOGIN">home.def</result>
	</action>
  </package>
 
</struts>