<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
  <constant name="struts.action.excludePattern" value="/_ah/.*,^/$"/>
  
  <package name="home" namespace="/" extends="struts-default">
	<result-types>  
	    <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />  
	</result-types>
        
	<action name="enter" class="fr.eemcs.schedulemanager.action.EnterAction">
		<result type="tiles" name="SUCCESS">home.def</result>
	</action>
	
	<action name="contact_*" method="{1}" class="fr.eemcs.schedulemanager.action.ContactAction">
		<result type="tiles" name="LIST">listeContacts.def</result>
		<result type="tiles" name="FORM">contactForm.def</result>
		<result type="redirectAction" name="SUCCESS">contact_list</result>
		<result type="tiles" name="LOGIN">home.def</result>
		<result type="tiles" name="ERROR">error.def</result>
	</action>
	
	<action name="parametrage_*" method="{1}" class="fr.eemcs.schedulemanager.action.ParametrageAction">
		<result type="tiles" name="LIST">listeParametrage.def</result>
		<result type="tiles" name="LOGIN">home.def</result>
	</action>
	
	<action name="lieu_*" method="{1}" class="fr.eemcs.schedulemanager.action.LieuAction">
		<result type="tiles" name="LIST">listeLieux.def</result>
		<result type="tiles" name="FORM">lieuForm.def</result>
		<result type="redirectAction" name="SUCCESS">lieu_list</result>
		<result type="tiles" name="LOGIN">home.def</result>
		<result type="tiles" name="ERROR">error.def</result>
	</action>
	
	<action name="programme_*" method="{1}" class="fr.eemcs.schedulemanager.action.ProgrammeAction">
		<result type="tiles" name="LIST">listeProgrammes.def</result>
		<result type="tiles" name="FORM">programmeForm.def</result>
		<result type="tiles" name="LOGIN">home.def</result>
		<result type="tiles" name="ERROR">error.def</result>
	</action>
	
	<action name="priere_*" method="{1}" class="fr.eemcs.schedulemanager.action.PriereAction">
		<result type="tiles" name="LIST">listePrieres.def</result>
		<result type="tiles" name="FORM">priereForm.def</result>
		<result type="tiles" name="LOGIN">home.def</result>
		<result type="tiles" name="ERROR">error.def</result>
	</action>
	
	<action name="lecture_*" method="{1}" class="fr.eemcs.schedulemanager.action.LectureAction">
		<result type="tiles" name="LIST">listeLectures.def</result>
		<result type="tiles" name="FORM">lectureForm.def</result>
		<result type="tiles" name="LOGIN">home.def</result>
		<result type="tiles" name="ERROR">error.def</result>
	</action>
	
	<action name="temoignage_*" method="{1}" class="fr.eemcs.schedulemanager.action.TemoignageAction">
		<result type="tiles" name="LIST">listeTemoignages.def</result>
		<result type="tiles" name="FORM">temoignageForm.def</result>
		<result type="tiles" name="LOGIN">home.def</result>
		<result type="tiles" name="ERROR">error.def</result>
	</action>
  </package>
 
</struts>